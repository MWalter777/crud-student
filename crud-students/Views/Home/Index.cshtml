@model IEnumerable<crud_students.Models.Student>

@{
    ViewBag.Title = "Index";
}


<div class="position">
    <div class="header">
        <div class="overload"></div>
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://i.blogs.es/80042f/bingwallpaper-2020-04-18/1366_2000.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://images4.alphacoders.com/937/thumb-1920-937608.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://i.blogs.es/dbca7a/fondo/1366_2000.jpeg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title text-center">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.surname</h6>
                    <div class="img-container">
                        <img src="https://images4.alphacoders.com/937/thumb-1920-937608.png" alt="image" class="image-responsive" />
                    </div>
                    <p class="card-text">Create at: @item.create_at</p>
                    <a href="#" class="card-link">Age: @item.age</a>
                </div>
            </div>
        }
    </div>
</div>


@section scripts {

    <script>

        function showOrHide() {
            if (window.scrollY > 40) {
                $('.nav-custom').removeClass('transparent');
            } else {
                $('.nav-custom').addClass('transparent');
            }
        }

        window.addEventListener('scroll', (event) => {
            showOrHide();
        });

        window.addEventListener('load', (event) => {
            showOrHide();
        });
    </script>

}
